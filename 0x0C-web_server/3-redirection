#!/usr/bin/env bash
# A script that configure your Nginx server to redirect to another page.

# Install Nginx
sudo apt-get update
sudo apt-get install nginx -y

# Configure Nginx to redirect requests to /redirect_me
echo "server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    root /var/www/html;
    index index.html;

    location / {
        try_files \$uri \$uri/ =404;
    }
}" > /etc/nginx/sites-available/default

# Restart Nginx
sudo service nginx restart
